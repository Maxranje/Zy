    }

    /**
    * Name 打开修改窗口
    */
    function openEdit(){
        $('#zy-form').form('clear');
        var item = $('#zy-datagrid').datagrid('getSelected');
        //alert(item.productid);return;
        $.ajax({
            url:'',
            data:'',
            success:function(data){
